extends layout

block content

  - let vechicles = results
  h1= title
  - let create = `dispatch(\"/vechicle/create\")`
  button.btn( class="btn-info", onclick= create) Add new vechicle
  div(class="container-fluid")
  div(class="row m-1")
    each vechicle in vechicles
      - let destination = `dispatch(\"/vechicle/update?id=${vechicle._id}\")`
      - let detail = `dispatch(\"/vechicle/detail/?id=${vechicle._id}")`
      - let deleteVechicle = `dispatch(\"/vechicle/delete/?id=${vechicle._id}")`      
      div(class="row-sm-2", class="m-1") vechicle #{vechicle.vechicle_type} (#{vechicle.color}) is #{vechicle.no_of_tyres}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-success", onclick= detail) Details
        button.btn( class="btn-dark", onclick= deleteVechicle) Delete

  script.
    function dispatch(path){
      window.location.href=path
    }