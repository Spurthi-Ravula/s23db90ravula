extends layout

block content
  h1= title
  p Welcome to #{title}
  p  Become familiar with using pug templates to dynamically generate web pages on the server side
  button(type="button" onclick="doReduce()" class="btn btn-primary") Press Me
  #reduce Reduce the value

  a(href="/vechicle") vechicle
  script.
    var count = 20
    var change = -1
    function doReduce(){
      count = count + change
      change = change -1
      let resultdiv = document.getElementById('reduce')
      resultdiv.innerHTML=`Count ${count} with change ${change}`
    }